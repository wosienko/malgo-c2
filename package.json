{
	"name": "malgo",
	"version": "0.0.1",
	"devDependencies": {
		"@playwright/test": "^1.43.0",
		"@sveltejs/adapter-auto": "^3.2.0",
		"@sveltejs/kit": "^2.5.5",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@types/bun": "^1.0.12",
		"@types/eslint": "^8.56.7",
		"@typescript-eslint/eslint-plugin": "^7.5.0",
		"@typescript-eslint/parser": "^7.5.0",
		"autoprefixer": "^10.4.19",
		"daisyui": "^4.10.1",
		"dotenv": "^16.4.5",
		"drizzle-kit": "^0.20.14",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0-next.4",
		"husky": "^9.0.11",
		"lucia": "^3.1.1",
		"pg": "^8.11.5",
		"postcss": "^8.4.38",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.2",
		"prettier-plugin-tailwindcss": "^0.5.13",
		"svelte": "^5.0.0-next.1",
		"svelte-adapter-bun": "^0.5.2",
		"svelte-check": "^3.6.9",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.6.2",
		"typescript": "^5.4.4",
		"vite": "^5.2.8"
	},
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "NODE_ENV='production' vite build",
		"preview": "vite preview",
		"test:e2e": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"generate": "bunx drizzle-kit generate:pg --config drizzle.config.ts",
		"migrate": "bunx drizzle-kit push:pg --config drizzle.config.ts",
		"studio": "bunx drizzle-kit studio --config drizzle.config.ts"
	},
	"type": "module",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json}": [
			"bunx prettier --config .prettierrc --write"
		]
	},
	"dependencies": {
		"drizzle-orm": "^0.30.7",
		"postgres": "^3.4.4",
		"oslo": "^1.2.0",
		"@lucia-auth/adapter-drizzle": "^1.0.7",
		"zod": "^3.22.4"
	}
}
